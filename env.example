# Environment variables for AIS D-STGT

# Data paths
DATA_DIR=./data
MODELS_DIR=./models
LOGS_DIR=./logs

# Training configuration
BATCH_SIZE=32
LEARNING_RATE=0.001
EPOCHS=100
DEVICE=cuda

# Model parameters
HIDDEN_DIM=256
NUM_LAYERS=6
NUM_HEADS=8
DROPOUT=0.1

# Data processing
SEQUENCE_LENGTH=50
PREDICTION_HORIZON=10

# API Keys (if needed)
# NOAA_API_KEY=your_noaa_api_key_here
# MARINECADASTRE_API_KEY=your_marinecadastre_api_key_here

# Database (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/ais_dstgt

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Reproducibility
RANDOM_SEED=42
DETERMINISTIC=true

# Performance
NUM_WORKERS=4
PIN_MEMORY=true
